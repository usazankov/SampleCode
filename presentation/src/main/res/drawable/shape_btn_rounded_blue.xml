<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/buttonColorRipple">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/dialogBaseColor" />
            <corners
                android:bottomLeftRadius="26dp"
                android:bottomRightRadius="26dp"
                android:topLeftRadius="26dp"
                android:topRightRadius="26dp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/buttonBackgroundColor" />
            <corners
                android:bottomLeftRadius="26dp"
                android:bottomRightRadius="26dp"
                android:topLeftRadius="26dp"
                android:topRightRadius="26dp" />
        </shape>
    </item>
</ripple>

