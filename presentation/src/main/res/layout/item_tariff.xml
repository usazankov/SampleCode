<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/rl_tariff_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tv_name_tariff"
            style="@style/SubList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            android:text="Открытие счета"
            android:textColor="@color/subTextColor" />

        <TextView
            android:id="@+id/tv_value_tariff"
            style="@style/BodyDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="1"
            android:text="1000Р"
            android:textAlignment="textEnd" />
    </LinearLayout>


    <View
        android:id="@+id/divider_header"
        android:layout_width="wrap_content"
        android:layout_height="0.25dp"
        android:layout_below="@+id/rl_tariff_item"
        android:layout_alignParentStart="true"
        android:background="@color/strokeColor" />
</RelativeLayout>